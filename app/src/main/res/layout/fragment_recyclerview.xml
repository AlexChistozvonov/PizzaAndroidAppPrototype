<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/element"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:background="#00000000"
        android:elevation="22dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="310dp"
        android:layout_height="134.47dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt"
        android:width="310dp"
        android:height="134.47dp"
        android:viewportWidth="310"
        android:viewportHeight="134.47"
        />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="108.92dp"
        android:layout_height="37.65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195.4dp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="211.55dp"
        android:layout_height="18.83dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="233.05dp"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="264dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:gravity="top"
        />


</FrameLayout>




